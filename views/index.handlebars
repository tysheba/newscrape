{{!-- Page Header --}}

<div style="background-color:white; width: 100%; height: 130px;">
  <h1 class="display-4" style="color: blue; text-align: center"><strong>Mongo Scraper</strong> </h1>
  <h3 style="text-align: center">Tech News from the Journal of Accountancy</h3>
</div>

{{!-- News Articles --}}
<div class="container-fluid" style="background-image: url('Images/news-bg-medium.jpeg')">
  <br>
  <div class="row">
    <div class="col-sm">

      {{#each dbArticle}}
      <div class="card" style="width: 50rem; margin: 20px;">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.summary}}</p>
          <a href="#" class="card-link">{{this.link}}</a><br>
          <button type="button" class="btn btn-primary" data_id="{{this._id}}">Post a Comment</button>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="col-sm">
      <div id="notes">
        <form>
          <div class="form-group">
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter title">
          </div>
          <div class="form-group">
            <textarea class="form-control" id="comment" rows="3" placeholder="Enter comment here"></textarea>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="app.js"></script>